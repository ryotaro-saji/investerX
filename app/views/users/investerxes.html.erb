<ul class="nav nav-tabs nav-justified mb-3">
    <li class="nav-item"><%= link_to 'プロフィール', user_path, class: 'nav-link' %></li>
    <li class="nav-item"><a href="<%= investerxes_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(investerxes_user_path(@user)) %>">投稿一覧 <span class="badge badge-secondary"><%= @count_investerxes %></span></a></li>
    <li class="nav-item"><%= link_to '投稿フォーム', new_investerx_path, class: 'nav-link' %></li>
    <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followings_user_path(@user)) %>">Followings  <span class="badge badge-secondary"><%= @count_followings %></span></a></li>
    <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">Followers  <span class="badge badge-secondary"><%= @count_followers %></span></a></li>
</ul>

<h1>投稿一覧</h1>
<ul class="list-unstyled">
  <% @user_investerxes.each do |investerx| %>
    <li class="media mb-3">
      <div class="media-body">
        <div>
          <%= link_to investerx.user.name, user_path(investerx.user) %> <span class="text-muted">posted at <%= investerx.created_at %></span>
        </div>
        <div>
          <p><%= investerx.content %></p>
        </div>
        <div>
          <% if current_user == investerx.user %>
            <%= link_to "消去", investerx, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  
  <%= paginate @user_investerxes %>
  <div class="btn btn-outline-success mt-4 mb-4"><%= link_to '自分のプロフィールに戻る', current_user %></div>
</ul>